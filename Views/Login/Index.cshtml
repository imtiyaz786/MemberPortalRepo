@model MemberPortal.ViewModel.MemberLogin

@{ ViewData["Title"] = "Index"; }

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-4 col-xl-7">
                <img src="https://cesie.org/media/euyouth4health-formazione-comunicazione-marketing-prevenzione-sanitaria-1080x864.jpg" class="img-fluid"
                     alt="Sample image" width="550" height="55">
            </div>
            <div class="login-form">
                <br /> 

                <form asp-action="Login" method="post">
                    <h2 class="text-center"><font color="#ffffff">Member Login</font></h2>
                    <br />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <font color="#ffffff">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </font>
                    </div>


                    <div class="form-group">
                        <font color="#ffffff">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </font>
                    </div>

                    <br />
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-warning btn-block" />
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
